{
  "name": "hardhat-project",
  "scripts": {
    "test": "hardhat test",
    "test:upgrade": "hardhat test test/GenImNFTv3_Viem_Ignition_Upgrade.ts",
    "test:oz-upgrade": "hardhat test test/GenImNFTv3_OpenZeppelin_Upgrade.ts",
    "test:upgrade-script": "hardhat test test/UpgradeScript_Integration.ts",
    "test:all-upgrades": "hardhat test test/*Upgrade*.ts",
    "upgrade:validate": "hardhat run scripts/upgrade-to-v3.ts --env VALIDATE_ONLY=true",
    "upgrade:dry-run": "hardhat run scripts/upgrade-to-v3.ts --env DRY_RUN=true",
    "upgrade:execute": "hardhat run scripts/upgrade-to-v3.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "hardhat": "^2.24.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "^5.3.0",
    "hardhat-abi-exporter": "^2.11.0"
  }
}
