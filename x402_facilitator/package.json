{
  "name": "x402-facilitator",
  "version": "1.0.0",
  "description": "x402 v2 Payment Facilitator for Optimism",
  "type": "module",
  "main": "x402_facilitator.js",
  "scripts": {
    "dev": "NODE_ENV=test node x402_facilitator.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage production",
    "info": "serverless info",
    "logs": "serverless logs -f facilitator",
    "remove": "serverless remove"
  },
  "keywords": [
    "x402",
    "payments",
    "optimism",
    "eip712",
    "usdc"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "viem": "^2.38.3",
    "dotenv": "^16.0.0",
    "pino": "^9.0.0"
  },
  "devDependencies": {
    "vitest": "^2.1.8",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "serverless-scaleway-functions": ">=0.4.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
